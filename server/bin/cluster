#!/usr/bin/env node
/* eslint-disable */
const env = process.env.NODE_ENV || "development"

if (env === "production") {
    const cluster = require("cluster")
    const os      = require("os")

    if (cluster.isMaster) {
        const cpus = os.cpus().length
        console.log(`Forking for ${cpus} CPUs`)

        for (let i = 0; i < cpus; i++)
            cluster.fork()
    } else require("./www")
} else require("./www")

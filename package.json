{
  "name": "troober-web",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "npm run start:all",
    "start:all": "npm-run-all -p start:server start:client",
    "start:server": "nodemon ./server/bin/www",
    "start:client": "webpack-dev-server",
    "start:prod": "cross-env NODE_ENV=production npm run start",
    "lint": "npm run lint:eslint -- . --ext .js --ext .jsx",
    "lint:eslint": "eslint",
    "pretest": "npm run test:clean && npm run lint",
    "test": "jest",
    "test:clean": "rimraf ./coverage",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx}": "lint:eslint"
  },
  "jest": {
    "collectCoverage": true,
    "testRegex": "\\.spec\\.js$"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "body-parser": "^1.17.2",
    "cookie-parser": "^1.4.3",
    "express": "^4.15.4",
    "html-webpack-plugin": "^2.30.1",
    "morgan": "^1.8.2",
    "path": "^0.12.7",
    "prop-types": "^15.5.10",
    "pug": "^2.0.0-rc.3",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "serve-favicon": "^2.4.3",
    "styled-components": "^2.1.2",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.7.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "cross-env": "^5.0.5",
    "enzyme": "^2.9.1",
    "eslint": "^4.6.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.3.0",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.4",
    "nodemon": "^1.12.0",
    "npm-run-all": "^4.1.1",
    "react-addons-test-utils": "^15.6.0",
    "react-test-renderer": "^15.6.1",
    "redux-mock-store": "^1.2.3",
    "rimraf": "^2.6.1"
  }
}
